{
  "source": {
    "include": ["./src/components/backend", "./src/components/frontend"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLink": true,
    "monospaceLink": true
  },
  "opts": {
    "recurse": true,
    "destination": "./docs/"
  }
}
